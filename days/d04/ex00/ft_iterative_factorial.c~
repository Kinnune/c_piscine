int	ft_iterative_factorial(int nb);

int	ft_iterative_factorial(int nb)
{
	int i;
	int duck;

	i = 1;
	duck = 1;
	if (nb > 12)
		return (0);
	if (nb < 0)
		return (0);
	while (i <= nb)
	{
		duck = i * duck;
		i++;
	}
	return (duck);
}
