#include<stdio.h>

int number = 6;
int times = -61;
int fact;

int ft_iterative_power(int nb, int power);

int ft_iterative_power(int nb, int power)
{
//	if (power < 0)
//		return 0;

	int result = 0;
	int i = 1;
	while(i <= power)
	{
		result += nb;
		i++;
	}
	return result;
}

int main()
{
	fact = ft_iterative_power(number, times);
	printf("%d", fact);
	return(0);
}
